<html>
    <head>
        <link href="assets/style.css" type="text/css"   rel="stylesheet" >
        <title>Actualiizar persona</title>
    </head>
    <body>
        <h1>Actualiizar persona</h1>
        <form action="/updatedPerson" method="POST">
            <label for="nss">NSS:</label>
            <input type="string" id="nss" name="nss" value="<%= `${person.nss}` %>"><br><br>
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="<%= `${person.nombre}` %>"><br><br>
            <label for="apellido">Apellido:</label>
            <input type="text" id="apellido" name="apellido" value="<%= `${person.apellido}` %>"><br><br>
            <label for="edad">Edad:</label>
            <input type="number" id="edad" name="edad" value="<%= `${person.edad}` %>"><br><br>
            <label for="tipoSangre">Tipo de sangre:</label>
            <input type="text" id="tipoSangre" name="tipoSangre" value="<%= `${person.tipoSangre
            }` %>"><br><br>
            <label for="objId">Id:</label>
            <input type="text" id="objId" name="objId" value="<%= `${person._id}` %>"><br><br>
            <input type="submit" value="Submit"><br><br>
        </form>

        <a href="inicio">Volver al inicio</a>
    </body>
    </html>
    